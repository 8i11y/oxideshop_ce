<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    bootstrap="bootstrap.php"
    colors="true"
    verbose="true"
    printerFile="unit/oxPrinter.php">
    <php>
        <includePath>unit</includePath>
        <ini name="memory_limit" value="1024M"/>
        <ini name="error_reporting" value="0"/>
    </php>
    <testsuites>
        <testsuite name="AllTestsUnit">
            <directory suffix="Test.php">unit</directory>
        </testsuite>
    </testsuites>
</phpunit>

